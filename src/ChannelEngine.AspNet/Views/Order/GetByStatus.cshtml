@model System.Collections.Generic.List<ChannelEngineApi.BusinessLogic.Models.OrderDto>

@{
    ViewBag.Title = "OrderList";
    Layout = "_Layout";
}

<div class="text-center">
    @if (Model == null)
    {
        <p>Orders not found.</p>
    }
    
    <div><h3>Order list</h3><br /></div>  
    <table class="table table-bordered table-responsive table-hover">  
        <tr>  
            <th>MerchantOrderNo </th>  
            <th>Email </th>  
            <th>Status </th>
            <th>Phone </th>
            <th>OrderDate </th>
            <th>IsBusinessOrder </th>
            <th>CurrencyCode </th>
            <th>CreatedAt </th>
        </tr>  
        @foreach (var order in Model)
        {  
            <tr>  
                <td>@order.MerchantOrderNo</td>  
                <td>@order.Email</td>  
                <td>@order.Status</td>
                <td>@order.Phone</td>
                <td>@order.OrderDate</td>
                <td>@order.IsBusinessOrder</td>
                <td>@order.CurrencyCode</td>
                <td>@order.CreatedAt</td>
            </tr>  
        }  
    </table>  
    
    <input type="button" value="Update Stock" onclick="location.href='@Url.Action("UpdateStock", "Order")'" />
</div>
